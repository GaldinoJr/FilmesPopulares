<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.example.galdino.filmespopulares.UI.Activits.ActivityFilmesDetalhe">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_titulo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/c_verde"
                android:elevation="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rocky"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/tv_size_titulo"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/margem_media"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_capa_filme"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="@dimen/margem_grande"
                    android:layout_marginTop="@dimen/margem_padrao"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/ft_capa_rocky"

                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margem_grande"
                    android:layout_marginTop="@dimen/margem_padrao"
                    android:layout_weight="1.3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_ano"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margem_padrao"
                        android:text="1985"
                        android:textColor="@color/c_cinza_letra"
                        android:textSize="@dimen/tv_size_subtitulo" />

                    <TextView
                        android:id="@+id/tv_tempo_filme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margem_padrao"
                        android:text="120min"
                        android:textColor="@color/c_cinza_letra"
                        android:textSize="@dimen/tv_size_subtitulo"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tv_nota_filme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margem_padrao"
                        android:text="8.1/10"
                        android:textColor="@color/c_preto"
                        android:textSize="@dimen/tv_size_texto" />

                    <Button
                        android:id="@+id/bt_favoritar"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margem_padrao"
                        android:background="@color/c_azul_botao"
                        android:text="@string/text_bt_favoritar"
                        android:textAlignment="center"
                        android:textColor="@color/c_cinza_letra" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_descricao_filme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margem_grande"
                android:layout_marginRight="@dimen/margem_media"
                android:layout_marginTop="@dimen/margem_grande"
                android:text="Apollo (Carl Weathers) morre em uma luta com Drago (Dolph Lundgren), um invencível lutador russo. Assim, Rocky (Sylvester Stallone) decide ir até a União Soviética para enfrentá-lo e vingar o amigo."
                android:textColor="@color/c_cinza_letra"
                android:textSize="@dimen/tv_size_texto" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margem_grande"
                android:layout_marginRight="@dimen/margem_media"
                android:layout_marginTop="@dimen/margem_padrao"
                android:background="@color/c_preto" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margem_grande"
                android:layout_marginRight="@dimen/margem_media"
                android:layout_marginTop="@dimen/margem_padrao"
                android:text="@string/trailers"
                android:textColor="@color/c_cinza_letra"
                android:textSize="@dimen/tv_size_texto" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margem_grande"
                android:layout_marginRight="@dimen/margem_media"
                android:layout_marginTop="@dimen/margem_padrao">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </RelativeLayout>
</layout>